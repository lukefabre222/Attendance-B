<% provide(:title, "一覧") %>
<h1>ユーザー一覧</h1>
<%= search_form_for @q, class:"form-horizontal" do |f| %>
  <div class="form-group row text-center">
    <%= f.label :name_cont, "氏名", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.search_field :name_cont, class:"form-control", placeholder: "氏名で検索" %>
    </div>
    <div class="col-sm-2">
      <%= f.submit class:"btn btn-outline-primary" %>
    </div>
  </div>
<% end %>

<%= will_paginate @users, previous_label: '&lt 前へ', next_label: '次へ &gt' %>

<ul>
  <%= render @users %>
</ul>

<%= will_paginate %>